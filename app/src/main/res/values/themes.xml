<resources>
    <style name="Theme.Flashcard" parent="Theme.Material3.Light.NoActionBar">

        <!-- Основные цвета -->
        <item name="colorPrimary">@color/pink_primary</item>
        <item name="colorOnPrimary">@color/brown_text</item>
        <item name="colorSurface">@color/cute_bg</item>

        <!-- Системные бары -->
        <item name="android:windowBackground">@color/cute_bg</item>
        <item name="android:statusBarColor">@color/cute_bg</item>
        <item name="android:navigationBarColor">@color/cute_bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Без ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Экран загрузки -->
    <style name="Theme.Flashcard.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/cute_bg</item>
    </style>
</resources>
