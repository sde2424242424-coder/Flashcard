<resources>
    <style name="Theme.Flashcard" parent="Theme.Material3.Light.NoActionBar">
        <!-- Цвета -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Убираем ActionBar, т.к. используем MaterialToolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Flashcard.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>
