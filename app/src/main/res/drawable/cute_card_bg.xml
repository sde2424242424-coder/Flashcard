<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Скругления -->
    <corners android:radius="24dp" />

    <!-- Нежный пастельный фон -->
    <solid android:color="@color/bg_white" />

    <!-- Лёгкая розовая рамка -->
    <stroke
        android:width="1dp"
        android:color="@color/fox_lightpink" />

    <!-- Внутренние отступы, чтобы текст смотрелся аккуратно -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
