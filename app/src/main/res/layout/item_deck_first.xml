<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cute_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingHorizontal="12dp"
    android:paddingTop="110dp"
    android:paddingBottom="210dp">

    <!-- ÐŸÐ¸Ð»ÑŽÐ»Ñ -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android:scaleType=&quot;fitEnd&quot; " />

    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pill_outline"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="18dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="ÐÐ°Ð·Ð²Ð°Ð½Ð¸Ðµ"
            android:textColor="@color/cute_text_primary"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/percentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/tvPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/cute_text_primary" />

            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="2dp"
                android:indeterminate="false"
                android:progress="0"
                android:progressTint="@color/cute_progress" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgFoxHead"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="-120dp"
        android:layout_marginEnd="40dp"
        android:adjustViewBounds="true"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/fox_peek"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"

        app:layout_constraintStart_toStartOf="@id/cardContainer"
        app:layout_constraintTop_toTopOf="@id/cardContainer" />


    <!-- ðŸ¦Š Ð¢ÐµÐ»Ð¾ Ð¿Ð¾Ð´ Ð¿Ð¸Ð»ÑŽÐ»ÐµÐ¹ -->
    <ImageView
        android:id="@+id/imgFoxBody"
        android:layout_width="290dp"
        android:layout_height="290dp"

        android:layout_marginTop="-85dp"
        android:layout_marginEnd="-30dp"
        android:adjustViewBounds="true"
        android:elevation="1dp"
        android:scaleType="fitEnd"
        android:src="@drawable/fox_body"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"

        app:layout_constraintStart_toStartOf="@id/cardContainer"
        app:layout_constraintTop_toBottomOf="@id/cardContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>
