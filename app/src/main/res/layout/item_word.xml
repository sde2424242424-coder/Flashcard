<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/card_bg_cute"
    android:elevation="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">


    <!-- Слово и перевод -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Слово (корейское) -->
        <TextView
            android:id="@+id/tvFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="남대문"
            android:textColor="@color/fox_brown"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Тире -->
        <TextView
            android:id="@+id/tvDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="  —  "
            android:textColor="@color/fox_brown"
            android:textSize="18sp" />

        <!-- Перевод (английский) -->
        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Namdaemun Gate"
            android:textColor="@color/fox_darkpink"
            android:textSize="18sp" />
    </LinearLayout>


    <!-- правая часть с чекбоксом -->
    <FrameLayout
        android:id="@+id/cb_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <CheckBox
            android:id="@+id/checkbox_learned"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:button="@drawable/selector_checkbox"
            android:background="@null"
            android:padding="0dp" />
    </FrameLayout>


    <!-- Rev -->
</LinearLayout>
